{
  "name": "@agney/react-dark-mode-toggle",
  "version": "2.0.3",
  "description": "An updated, cute dark mode toggle button for React.",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "main": "dist/index.cjs.js",
  "exports": {
    ".": [
      {
        "import": "./dist/index.es.js",
        "require": "./dist/index.cjs.js",
        "default": "./dist/index.cjs.js"
      }
    ],
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "keywords": [
    "react",
    "dark",
    "night",
    "mode",
    "toggle",
    "button",
    "switch"
  ],
  "scripts": {
    "dev": "vite --open",
    "prebuild": "npm install && rimraf dist",
    "format": "prettier --write \"./src/**/*.{ts,tsx}\"",
    "type-check": "echo \"Type-checking...\" && tsc --noEmit",
    "test": "echo \"Running tests...\" && jest",
    "storybook": "storybook dev",
    "build-storybook": "storybook build",
    "build": "yarn type-check && vite build",
    "prepublishOnly": "yarn build"
  },
  "repository": "https://github.com/agneym/react-dark-mode-toggle-2",
  "author": "Agney Menon <agney@outlook.in>",
  "license": "MIT",
  "private": false,
  "resolutions": {
    "lottie-web": "5.7.14"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@emotion/css": "^11.5.0",
    "@rollup/plugin-typescript": "^8.3.0",
    "@storybook/addon-actions": "^7.0.8",
    "@storybook/addon-essentials": "^7.0.8",
    "@storybook/addon-links": "^7.0.8",
    "@storybook/react": "^7.0.8",
    "@storybook/react-vite": "^7.0.8",
    "@types/jest": "^27.0.2",
    "@types/react": "^18.2.5",
    "@types/react-dom": "^18.2.3",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "babel-loader": "^8.2.3",
    "husky": "^4.3.8",
    "jest": "^27.3.1",
    "lint-staged": "^11.2.5",
    "lottie-web": "^5.7.14",
    "prettier": "^2.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.58.3",
    "rollup-plugin-typescript2": "^0.30.0",
    "storybook": "^7.0.8",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "typescript": "^5.0.4",
    "vite": "^4.3.4"
  },
  "peerDependencies": {
    "react": ">=16",
    "react-dom": ">=16"
  },
  "dependencies": {
    "goober": "^2.0.41",
    "react-lottie-player": "^1.4.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn type-check && yarn test && lint-staged"
    }
  },
  "lint-staged": {
    "./{src,stories}/**/*.{ts,tsx,js,jsx}": [
      "prettier --write"
    ]
  }
}
